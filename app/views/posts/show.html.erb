<p id="notice"><%= notice %></p>

<p>
  <h1><%= @post.name %> </h1>
  
</p>

<p>
  <h2><%= @post.title %></h2>
  
</p>



<p>
  <%= image_tag @post.image.url %>
  <%= @post.content %>
</p>
<p>
  <h3>Tags:</h3>
  <%= join_tags(@post) %>
</p>
<h3>Comments</h3>
<%= render @post.comments %>


<h3>Add comment:</h3>
<%= render "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
